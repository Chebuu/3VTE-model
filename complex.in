set default nocenter off
set default PBradii mbondi2
set default CMAP on

source leaprc.gaff2
source leaprc.water.tip3p
source leaprc.protein.ff14SB

3VTE = loadPDB structures/3vte_proa.model.pdb

loadAmberParams CBGA.frcmod
CBGA = loadMol2 structures/CBGA.gaff.mol2

loadAmberParams FAD.frcmod
loadAmberParams FAD-HIE.frcmod
FAD = loadMol2 structures/FAD.gaff.mol2

complex = combine {3VTE FAD CBGA}

remove complex complex.546.HM83
deleteBond complex.546.HM83 complex.546.C8M
bond complex.546.C8M complex.458.ND1

solvateBox complex TIP3PBOX 5

saveAmberParm complex complex.prmtop complex.inpcrd
quit